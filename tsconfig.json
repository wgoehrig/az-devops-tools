{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "stripInternal": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
